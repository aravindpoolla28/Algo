name: Run Algo Script

on:
  workflow_dispatch:   # Allows you to trigger the workflow manually from GitHub UI

jobs:
  run-script:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: Install dependencies
        run: |
          pip install pandas requests ta delta-rest-client

      - name: Run script
        run: |
          python "Algo, bracket order, check for open orders, multiple accounts.py"
